{
  "name": "patronum",
  "private": true,
  "scripts": {
    "test": "NODE_ENV=test yarn test:code && yarn test:types",
    "test:code": "jest",
    "test:types": "tsc -p ./test-typings",
    "commit": "git-cz",
    "format": "prettier --write \"./src/**/**.{ts,tsx,js,jsx,json}\"",
    "lint": "eslint ./",
    "cleanup": "rm -rf dist && mkdir dist",
    "build:indexes": "node scripts/build.js",
    "build:types": "tsc --project ./tsconfig.build.json",
    "build:commonjs": "yarn babel --verbose --out-dir dist src -x .ts --ignore '**/*.test.ts','**/*.d.ts'",
    "build:mjs": "ESMODULES=true yarn build:commonjs --out-file-extension .mjs",
    "build:bundles": "rollup -c",
    "build": "run-s cleanup build:indexes build:types build:commonjs build:mjs build:bundles",
    "prepublishOnly": "yarn build:methods && yarn build:cjs"
  },
  "author": "Sergey Sova <mail@sergeysova.com> (https://sergeysova.com/)",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@eslint-kit/eslint-config-base": "^2.1.0",
    "@eslint-kit/eslint-config-node": "^2.0.0",
    "@eslint-kit/eslint-config-prettier": "^2.0.0",
    "@eslint-kit/eslint-config-typescript": "^3.1.1",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@types/jest": "^26.0.14",
    "@typescript-eslint/parser": "^4.2.0",
    "babel-plugin-macros": "^3.0.1",
    "babel-plugin-tester": "^10.0.0",
    "camel-case": "^4.1.1",
    "commitizen": "4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "effector": "^22.1.1",
    "eslint": "^7.9.0",
    "globby": "^11.0.0",
    "husky": "3.1.0",
    "jest": "^27.2.4",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "rollup": "^2.32.1",
    "rollup-plugin-terser": "^7.0.2",
    "tsd": "^0.13.1",
    "typescript": "^4.2.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
